<?xml version="1.0"?>
<robot xmlns:xacro="https://ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="suffix parent xyz">
        <link name="wheel_${suffix}">
            <visual>
                <origin xyz="0 0 0" rpy="1.570795 0 0"/>
                <geometry>
                    <cyinder radius="0.2" length="0.2"/>
                </geometry>
            </visual>
            <collision>    
                <geometry>
                    <cylinder radius="${wheel_rad}" length="${wheel_wid}"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5" />
                <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005" />
              </inertial>
        </link>

        <joint name="wheel_${suffix}_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="wheel_${suffix}"/>
            <origin xyz="${xyz}"/>
            <axis xyz="0 0 1"/>
        </joint>
    </xacro:macro>
</robot>
